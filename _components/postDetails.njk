<div class="post-details">
  <p>By <a class="p-author h-card" href="https://andreubotella.com">Andreu Botella</a></p>
  {% if published %}
    <p>
      <time class="dt-published" datetime="{{ date.toISOString() }}">{{ date | date("HUMAN_DATE") }}</time>
      {% if updated %}
      (updated <time class="dt-updated" datetime="{{ updated.toISOString() }}">{{ updated | date("HUMAN_DATE") }}</time>)
      {% endif %}
    </p>
  {% else %}
    <p>Not yet published</p>
  {% endif %}
  <p>{{ readingInfo.minutes or "???" }} minutes</p>
</div>
<div class="tags">
  {% if tags | length %}
    <p>Tags:</p>
    <ul>
      {% for tag in tags %}
        <li><a class="p-category" href="/blog/tag/{{ tag | slugify | urlencode }}/">{{ tag }}</a></li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No tags.</p>
  {% endif %}
</div>